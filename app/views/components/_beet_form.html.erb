<% if user_signed_in? %>
<div class="panel panel-default beet-form-panel">
  <div class="panel-body row">
      <div class="col-sm-1">
          <img src="/profile.jpg" class="img-circle" height="38px" width="38px" alt="">
      </div>
      <div class="col-sm-11">
          <%= form_for(@newBeet) do |f| %>
              <div class="field" style="margin-left: 10px;">
                  <%= f.text_field :content, autofocus: true, class: "form-control" %>
                  <span type="button" class: "btn btn-submit" style="float: right; margin-top: 5px;"><%= f.submit "Add Beet", class: "btn btn-primary" %></span>
              </div>
          <% end %>
      </div>
  </div>
</div>
<% end %>
